
{
  "name": "raw-wealthy-backend",
  "version": "60.0.0",
  "description": "Raw Wealthy Investment Platform - Complete Backend with Real-time Features",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "prod": "NODE_ENV=production node server.js",
    "render:prod": "node server.js",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run format",
    "build": "echo 'No build step required'",
    "clean": "rm -rf node_modules package-lock.json && npm cache clean --force",
    "reinstall": "npm run clean && npm install",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js",
    "monitor": "node scripts/system-monitor.js",
    "health": "curl -X GET http://localhost:10000/api/health || echo 'Server not running'",
    "backup": "node scripts/backup-script.js",
    "render-build": "echo 'Building for Render...'",
    "render-start": "node server.js",
    "prestart": "echo 'Starting Raw Wealthy Backend...'",
    "postinstall": "echo 'Raw Wealthy Backend installation complete!'",
    "stats": "npm-scripts-analyzer"
  },
  "keywords": [
    "investment",
    "fintech",
    "raw-materials",
    "trading",
    "wealth-management",
    "real-time",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "redis"
  ],
  "author": "Raw Wealthy Team <tech@rawwealthy.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raw-wealthy/backend.git"
  },
  "bugs": {
    "url": "https://github.com/raw-wealthy/backend/issues"
  },
  "homepage": "https://rawwealthy.com",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.2",
    "ws": "^8.14.2",
    "ioredis": "^5.3.2",
    "mongoose-paginate-v2": "^1.7.3",
    "winston": "^3.11.0",
    "cloudinary": "^1.41.0",
    "axios": "^1.6.2",
    "crypto-js": "^4.1.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "sharp": "^0.33.0",
    "multer-storage-cloudinary": "^4.0.0",
    "fluent-json-schema": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "paystack": "^2.0.5",
    "flutterwave-node-v3": "^1.0.14",
    "stripe": "^14.12.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.2.3",
    "pino-http": "^9.0.0",
    "http-errors": "^2.0.0",
    "joi": "^17.11.0",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "luxon": "^3.4.4",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2"
