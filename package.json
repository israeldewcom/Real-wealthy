  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.8",
    "@types/lodash": "^4.14.201",
    "@types/ws": "^8.5.9",
    "@types/speakeasy": "^2.0.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "@types/jest": "^29.5.11",
    "jest-mongodb": "^4.2.0",
    "mongodb-memory-server": "^9.1.5",
    "faker": "^5.5.3",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "cross-env": "^7.0.3",
    "npm-scripts-analyzer": "^1.0.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.3.1"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/coverage/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "middlewares/**/*.js",
      "utils/**/*.js",
      "services/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always"
        }
      ],
      "no-console": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreStrings": true
        }
      ],
      "camelcase": "off",
      "node/exports-style": [
        "error",
        "module.exports"
      ],
      "node/prefer-global/buffer": [
        "error",
        "always"
      ],
      "node/prefer-global/console": [
        "error",
        "always"
      ],
      "node/prefer-global/process": [
        "error",
        "always"
      ],
      "node/prefer-global/url-search-params": [
        "error",
        "always"
      ],
      "node/prefer-global/url": [
        "error",
        "always"
      ],
      "node/no-unpublished-require": "off",
      "node/no-missing-import": "off",
      "security/detect-object-injection": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "env": {
      "jest": true,
      "node": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "controllers",
      "models",
      "routes",
      "middlewares",
      "utils",
      "services"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "tests/",
      "logs/",
      "uploads/"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development",
      "PORT": "10000",
      "MONGODB_URI": "mongodb://localhost:27017/rawwealthy-dev",
      "JWT_SECRET": "development-secret-key-change-in-production"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "render": {
    "name": "raw-wealthy-backend",
    "env": "node",
    "region": "us-east-1",
    "type": "web",
    "plan": "starter",
    "buildCommand": "npm install",
    "startCommand": "npm start",
    "healthCheckPath": "/api/health",
    "autoDeploy": true
  },
  "files": [
    "server.js",
    "controllers",
    "models",
    "routes",
    "middlewares",
    "utils",
    "services",
    "scripts",
    "logs",
    "uploads",
    "tests",
    ".env.example",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "render.yaml",
    "Dockerfile",
    "docker-compose.yml",
    "nginx.conf",
    "pm2.config.js"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "funding": {
    "type": "individual",
    "url": "https://rawwealthy.com/support"
  }
}
